@model IEnumerable<FerroApp.Consume.Models.Producto>
<!-- Page Content -->
<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link href="~/css/Multi.css" rel="stylesheet" />
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h2 class="my-4">Categorías</h2>
            <div class="list-group">
                <a href="#" class="list-group-item">Herramientas</a>
                <a href="#" class="list-group-item">Pinturas</a>
                <a href="#" class="list-group-item">Categoría 3</a>
            </div>

        </div>
        <!-- /.col-lg-3 -->
  
        <div class="col-lg-9 mt-3">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/img/Inauguración.svg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/Entregas Rápidas.svg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/¡Que nada te detenga!.svg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        @*<a href="#"><img class="card-img-top" src="~/img/martillo.svg" alt=""></a>*@
                        <div class="card-body">
                            <h4 class="card-title">
                                <a>@Html.DisplayFor(modelItem => item.Nombre)</a>
                                @*@<a href="#">@Html.DisplayFor(modelItem => item.Codigo)</a>@*@
                            </h4>
                            <h4 class="text">
                                <p>Marca @Html.DisplayFor(modelItem => item.Marca)</p>
                            </h4>
                            <h5>Precio $@Html.DisplayFor(modelItem => item.Precio)</h5>
                            <h5>Existentes: @Html.DisplayFor(modelItem => item.Stock)</h5>
                            @*@<h5></h5>@
                        @<p>@Html.DisplayFor(modelItem => item.Categoria)</p>@*@
                            @**<a href="#">Leer más...</a>*@
                        </div>
                        <div class="card-footer">
                            <input type="number" class="form-control" id="inputAddress">
                            <div class="buttons"> <button class="cart-button"> <span class="add-to-cart">Agregar</span> <span class="added">Añadido</span> <i class="fas fa-shopping-cart" style="color:white"></i> <i class="fas fa-square" style="color:white"></i> </button> </div>
                        </div>
                    </div>
                </div>
            }

        
    </div>
</div>

            <!-- /.container -->
            <!-- Bootstrap core JavaScript -->
            <script src="~/js/personalizado.js"></script>
            <script src="~/Vendor/jquery/jquery.min.js"></script>
            <script src="~/Vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
