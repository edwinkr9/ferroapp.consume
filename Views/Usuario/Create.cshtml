@model FerroApp.Consume.Models.Usuario

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <title>Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/registernuevo.css">
</head>
<body>
    <div class="container">
        <div class="myCard">
            <div class="row">
                <div class="col-md-6">
                    <div class="myLeftCtn">
                        <form class="myForm text-center" asp-action="Create">
                            <header>
                                Registro
                            </header>
                            <br />
                            <br />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <i class="fas fa-user"></i>
                                @*<label asp-for="Correo" class="label"></label>*@
                                <input type="email" placeholder="Correo" asp-for="Correo" class="myInput" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <i class="fas fa-user"></i>
                                @*<label asp-for="Contraseña" class="label"></label>*@
                                <input type="password" placeholder="Password" asp-for="Contraseña" class="myInput" />
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>

                            <input type="submit" class="butt" value="Registrarse">

                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="myRightCtn">
                        <div class="box">
                            <header>¿Ya tienes cuenta?</header>
                            <br />
                            <br />
                            <br />
                            <h4>Inicia de sesión</h4>
                            @*<button href="/Login/Index" type="button" class="butt_out">Click aquí</button>*@
                            @*<button type="button" class="butt_out"><a style='text-decoration: none' href="/Login/Index">Click aquí</a></button>*@
                            <button type="button" class="butt_out"><a href="/Login/Index" style="text-decoration: none;">Click aquí</a></button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>


